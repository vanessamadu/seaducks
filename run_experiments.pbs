#!/bin/bash
#PBS -l walltime=2:00:00
#PBS -l select=1:ncpus=1:mem=4gb
#PBS -J 1-2

module load anaconda3/personal
eval "$(mamba shell hook --shell bash)"
export MAMBA_ROOT_PREFIX="$HOME/anaconda3"
mamba activate SeaDucks

cd $PBS_O_WORKDIR

python phd-project1/SeaDucks/seaducks/experiments/hpc_scripts/fit_mvn_ngboost.py ${PBS_ARRAY_INDEX} > experiment_${PBS_ARRAY_INDEX}_logs

# copy files back
mv experiment_${PBS_ARRAY_INDEX}_logs $HOME/phd-project1/SeaDucks/seaducks/experiment_logs
mv experiment_${PBS_ARRAY_INDEX}.p $HOME/phd-project1/SeaDucks/seaducks/fit_models
mv experiment_${PBS_ARRAY_INDEX}test_data.p $HOME/phd-project1/SeaDucks/seaducks/model_test_data